<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/h_match_parent_no"
    android:background="@drawable/border_bottom_divider"
    android:padding="@dimen/d_10dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
       style="@style/v_match_parent_no">

        <TextView
            android:text="深圳市沛誉能源总经理在北京与中国能建集团国际分公司董事长进行交流"
            android:lines="3"
            android:ellipsize="end"
            android:layout_weight="1"
            style="@style/text14color666" />

        <LinearLayout
            style="@style/h_match_parent_no">

            <TextView
                android:text="公司新闻"
                android:background="@drawable/shape_news_type"
                style="@style/text10colorRed" />

            <TextView
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/d_10dp"
                android:text="@string/time"
                style="@style/text10color999" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:src="@mipmap/temp5"
        android:scaleType="fitXY"
        android:layout_width="@dimen/d_120dp"
        android:layout_height="@dimen/d_80dp" />

</LinearLayout>
