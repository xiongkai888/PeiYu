<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/h_match_parent_no"
    android:background="@color/white"
    android:padding="@dimen/d_10dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
       style="@style/v_match_parent_no">

        <TextView
            android:id="@+id/title_tv"
            android:lines="3"
            android:ellipsize="end"
            android:layout_weight="1"
            style="@style/text14color666" />

        <LinearLayout
            style="@style/h_match_parent_no">

            <TextView
                android:id="@+id/name_tv"
                android:background="@drawable/shape_news_type"
                style="@style/text10colorRed" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/d_10dp"
                style="@style/text10color999" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/pic_iv"
        android:src="@mipmap/temp5"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/d_120dp"
        android:layout_height="@dimen/d_90dp" />

</LinearLayout>
