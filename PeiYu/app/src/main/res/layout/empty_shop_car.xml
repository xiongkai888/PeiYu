<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        style="@style/text"
        android:layout_marginBottom="@dimen/d_20dp"
        android:src="@mipmap/icon_shopping_null" />

    <TextView
        style="@style/text"
        android:gravity="center_horizontal"
        android:text="HI~\n购物车暂时没有商品"
        android:textColor="@color/color999"
        android:textSize="@dimen/txt_18sp" />


    <Button
        android:id="@+id/go_bt"
        style="@style/button_style"
        android:background="@drawable/shape_f_r"
        android:layout_marginLeft="@dimen/d_120dp"
        android:layout_marginRight="@dimen/d_120dp"
        android:layout_marginTop="@dimen/d_20dp"
        android:text="开始选购" />

</LinearLayout>
