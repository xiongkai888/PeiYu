<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_home_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            style="@style/text_weight"
            android:layout_height="match_parent"
            android:background="@color/colorF4F4" />

        <!--<TextView-->
        <!--style="@style/line_v1dp_divider" />-->

        <com.xson.common.widget.SmartSwipeRefreshLayout
            android:id="@+id/pull_refresh_rv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:listSelector="@null"/>

    </LinearLayout>

</LinearLayout>
