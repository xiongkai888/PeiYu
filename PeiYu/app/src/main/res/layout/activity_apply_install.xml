<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context="com.lanmei.peiyu.ui.mine.activity.ApplyInstallActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <android.support.v4.widget.NestedScrollView style="@style/match_parent_all">


        <LinearLayout
            style="@style/v_all_match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView style="@style/line_H10dp_on" />

            <TextView
                style="@style/text14color1ca637"
                android:paddingBottom="@dimen/d_2dp"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp"
                android:text="安装信息" />

            <TextView
                style="@style/text14color666"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_divider"
                android:drawableRight="@mipmap/o_down"
                android:hint="请选择用户基本信息"
                android:padding="@dimen/d_10dp" />

            <TextView
                style="@style/text14color1ca637"
                android:paddingBottom="@dimen/d_2dp"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp"
                android:text="安装电话" />

            <EditText
                style="@style/text14color666"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_divider"
                android:hint="输入联系电话"
                android:inputType="phone"
                android:padding="@dimen/d_10dp" />


            <TextView
                style="@style/text14color1ca637"
                android:paddingBottom="@dimen/d_2dp"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp"
                android:text="安装时间" />

            <TextView
                style="@style/text14color666"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_divider"
                android:drawableRight="@mipmap/o_down"
                android:hint="请选择安装时间"
                android:padding="@dimen/d_10dp" />


            <TextView
                style="@style/text14color1ca637"
                android:paddingBottom="@dimen/d_2dp"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp"
                android:text="其他说明" />

            <EditText
                style="@style/text14color666"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_120dp"
                android:layout_marginBottom="@dimen/d_10dp"
                android:layout_marginLeft="@dimen/d_10dp"
                android:layout_marginRight="@dimen/d_10dp"
                android:background="@drawable/shape_explain"
                android:gravity="top"
                android:hint="请输入说明文字"
                android:padding="@dimen/d_5dp" />

            <TextView style="@style/line_H10dp_on" />

            <LinearLayout
                style="@style/ll_bottom_h"
                android:padding="@dimen/d_10dp">

                <include layout="@layout/include_type_icon" />

                <TextView
                    style="@style/text_weight"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:text="安装流程" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/d_10dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_5dp"
                style="@style/h_match_parent_no">

                <LinearLayout
                    style="@style/text_weight"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text10color666"
                        android:background="@mipmap/icon_jindu"
                        android:gravity="center"
                        android:text="1" />

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/text_weight"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text10color666"
                        android:background="@mipmap/icon_jindu"
                        android:gravity="center"
                        android:text="2" />

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/text_weight"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text10color666"
                        android:background="@mipmap/icon_jindu"
                        android:gravity="center"
                        android:text="3" />

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/text_weight"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text10color666"
                        android:background="@mipmap/icon_jindu"
                        android:gravity="center"
                        android:text="4" />

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/text_weight"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text10color666"
                        android:background="@mipmap/icon_jindu"
                        android:gravity="center"
                        android:text="5" />

                    <TextView
                        style="@style/line_H1dp_divider"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/ll_bottom_h"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_5dp"
                android:paddingBottom="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:gravity="center_horizontal"
                    android:text="用户信息录入"
                    android:textSize="@dimen/txt_10sp" />

                <TextView
                    style="@style/text_weight"
                    android:gravity="center_horizontal"
                    android:text="施工申报"
                    android:textSize="@dimen/txt_10sp" />

                <TextView
                    style="@style/text_weight"
                    android:gravity="center_horizontal"
                    android:text="设备发货"
                    android:textSize="@dimen/txt_10sp" />

                <TextView
                    style="@style/text_weight"
                    android:gravity="center_horizontal"
                    android:text="施工安装"
                    android:textSize="@dimen/txt_10sp" />

                <TextView
                    style="@style/text_weight"
                    android:gravity="center_horizontal"
                    android:text="竣工验收"
                    android:textSize="@dimen/txt_10sp" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_login"
                style="@style/button_style"
                android:layout_marginTop="@dimen/d_30dp"
                android:text="@string/submit" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
