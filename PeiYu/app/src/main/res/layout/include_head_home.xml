<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/include_ad" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_classify"
        style="@style/match_parent"
        android:paddingTop="@dimen/d_5dp" />

    <TextView
       style="@style/line_H10dp_on" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/text"
        android:paddingBottom="@dimen/d_10dp"
        android:paddingLeft="@dimen/d_5dp"
        android:paddingTop="@dimen/d_10dp"
        android:text="推荐商品" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/h_match_parent_no"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_weight"
            android:paddingBottom="@dimen/d_10dp"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_10dp"
            android:text="最新资讯" />

        <TextView
            style="@style/text12colorBlack"
            android:padding="@dimen/d_10dp"
            android:paddingBottom="@dimen/d_10dp"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_10dp"
            android:text="更多" />

    </LinearLayout>

</LinearLayout>
