<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/include_ad" />

    <LinearLayout
        style="@style/h_match_parent"
        android:paddingBottom="@dimen/d_5dp"
        android:paddingTop="@dimen/d_10dp">

        <TextView
            android:id="@+id/home_classify1_tv"
            style="@style/text_weight"
            android:drawablePadding="@dimen/d_2dp"
            android:drawableTop="@mipmap/home_classify_1"
            android:gravity="center_horizontal"
            android:text="模拟收入" />
        <TextView
            android:id="@+id/home_classify2_tv"
            style="@style/text_weight"
            android:drawablePadding="@dimen/d_2dp"
            android:drawableTop="@mipmap/home_classify_2"
            android:gravity="center_horizontal"
            android:text="资料录入" />
        <TextView
            android:id="@+id/home_classify3_tv"
            style="@style/text_weight"
            android:drawablePadding="@dimen/d_2dp"
            android:drawableTop="@mipmap/home_classify_3"
            android:gravity="center_horizontal"
            android:text="安装申报" />

        <TextView
            android:id="@+id/home_classify4_tv"
            style="@style/text_weight"
            android:drawablePadding="@dimen/d_2dp"
            android:drawableTop="@mipmap/home_classify_4"
            android:gravity="center_horizontal"
            android:text="售后报修" />

    </LinearLayout>

    <LinearLayout style="@style/v_match_parent">

        <ImageView
            style="@style/match_parent"
            android:layout_marginLeft="@dimen/d_5dp"
            android:layout_marginRight="@dimen/d_5dp"
            android:layout_marginTop="@dimen/d_5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/temp1" />

        <LinearLayout
            style="@style/h_match_parent"
            android:layout_marginBottom="@dimen/d_5dp"
            android:layout_marginTop="@dimen/d_5dp">

            <ImageView
                style="@style/text_weight"
                android:layout_marginLeft="@dimen/d_5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/temp2" />

            <ImageView
                style="@style/text_weight"
                android:layout_marginLeft="@dimen/d_5dp"
                android:layout_marginRight="@dimen/d_5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/temp3" />

            <ImageView
                style="@style/text_weight"
                android:layout_marginRight="@dimen/d_5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/temp4" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text"
        android:paddingBottom="@dimen/d_10dp"
        android:paddingLeft="@dimen/d_5dp"
        android:paddingTop="@dimen/d_10dp"
        android:text="推荐商品" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/h_match_parent_no"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_weight"
            android:paddingBottom="@dimen/d_10dp"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_10dp"
            android:text="最新资讯" />

        <TextView
            style="@style/text12colorBlack"
            android:padding="@dimen/d_10dp"
            android:paddingBottom="@dimen/d_10dp"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_10dp"
            android:text="更多" />

    </LinearLayout>

</LinearLayout>
