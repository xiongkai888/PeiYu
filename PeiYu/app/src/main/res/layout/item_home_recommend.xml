<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent"
    android:paddingBottom="@dimen/d_8dp"
    android:layout_marginRight="@dimen/d_2dp"
    android:layout_marginLeft="@dimen/d_2dp"
    android:layout_width="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/d_120dp"
        android:layout_height="@dimen/d_100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/temp2" />


    <TextView
        style="@style/text12color666"
        android:layout_marginTop="@dimen/d_2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/d_5dp"
        android:paddingRight="@dimen/d_5dp"
        android:paddingTop="@dimen/d_5dp"
        android:text="逆变器" />


    <LinearLayout
        android:gravity="center_vertical"
        style="@style/h_match_parent_no">

        <TextView
            android:id="@+id/price_sub_tv"
            style="@style/text12colorRed"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingRight="@dimen/d_5dp"
            android:text="￥1558.00" />

        <ImageView
            android:src="@mipmap/home_add"
            android:layout_marginRight="@dimen/d_5dp"
            style="@style/text" />

    </LinearLayout>

</LinearLayout>
